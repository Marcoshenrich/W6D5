<a href="<%= cats_url %>">back to index</a>
<h1>Rent <%= @cat.nil? ? "a cat" : @cat.name %></h1>
<% unless @requested %>
    <div class="error"><%= "ERROR: " + @cat.name + " is already being rented in the selected date range" %></div>
<% end %>
<form action="<%= cat_rental_requests_url %>" method="POST">
    <label>Cat
    <select name="cat_rental_request[cat_id]" required>
        <option disabled <%= "selected" if @cat.nil? %>>Select cat</option>
        <% @cats.each do |cat| %>
            <option value="<%= cat.id %>" <%= "selected" if @cat && @cat.name == cat.name %>><%= cat.name %></option>
        <% end %>
    </select></label>
    <label>Start date
    <input type="date" name="cat_rental_request[start_date]" placeholder="Starting on" value="<%= @cat_rental_request.start_date %>" required></label>
    <label>End Date
    <input type="date" name="cat_rental_request[end_date]" placeholder="Ending on" value="<%= @cat_rental_request.end_date %>" required></label>

    <button>Rent</button>

</form>